@using static AdminHalloDoc.Entities.ViewModel.Constant;
@model AdminHalloDoc.Entities.ViewModel.AdminViewModel.PaginatedViewModel;
@{

    var status = "null";
    if (TempData["Status"] == null)
    {
        status = "null";
    }
    else
    {
        status = TempData["Status"].ToString();

    }
}
<div class="container-fluid">
    <div class="justify-content-between d-flex container-fluid mt-5 position-relative ">
        <div class="">
            <h3 class="fw-bolder">
                Patient Record
            </h3>
        </div>
    </div>
    <div class="card border-0 shadow py-4 mb-5 mx-3 mt-3 rounded">
        <div class="text-end mx-2 px-3">
            <!-- Button trigger modal -->
            <a asp-action="CreateRoleAccess" asp-controller="RoleAccess" type="button" class="btn btn-outline-info">
                Create Access
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-responsive mt-3 p-3">
                <thead>
                    <tr>
                        <th scope="col">Client/Member</th>
                        <th scope="col">Created Date</th>
                        <th scope="col">Confirmation</th>
                        <th scope="col">Provider Name</th>
                        <th scope="col">Concluded</th>
                        <th scope="col">Status</th>
                        <th scope="col">Final Report</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider mx-5">
                    @foreach (var item in Model.DashboardList)
                    {
                        <tr>
                            <td scope="row" > @item.PatientName</td>
                            <td scope="row" > @item.RequestedDate</td>
                            <td scope="row" > @item.Confirmation</td>
                            <td scope="row"> @item.Physician</td>
                            <td scope="row"> @item.ConcludedDate</td>
                            <td scope="row"> @item.Status</td>
                            <td class="mobile-hide" data-label="Document">
                                <a asp-action="CreateRoleAccess" asp-controller="RoleAccess"  class="btn btn-outline-info btn-sm document-button">
                                    Edit
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor"
                                         class="bi bi-arrow-down-circle mx-1" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z" />
                                    </svg>
                                </a>
                            </td>
                            <td class="mobile-hide" data-label="Document">
                                <a asp-action="CreateRoleAccess" asp-controller="RoleAccess" class="btn btn-outline-info btn-sm document-button">
                                    Edit
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor"
                                         class="bi bi-arrow-down-circle mx-1" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>

@section Scripts
    {

    <script type="text/javascript">

        window.onload = function () {

            console.log("@status  d");
            if ("@status" != "null") {
                savealt("@status")
            }

        };
    </script>
}
