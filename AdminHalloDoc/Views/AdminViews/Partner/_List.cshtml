@model List<AdminHalloDoc.Entities.ViewModel.AdminViewModel.ViewVendorList>;
<div class="table-responsive">
    <table id="table" class="table table-responsive mt-3 p-3">
        <thead>
            <tr>
                <th>Profession</th>
                <th scope="col">Business Name </th>
                <th scope="col">Email</th>
                <th scope="col">Fax Number</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Business Contact</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody class="table-group-divider mx-5">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="table-text px-3 " scope="row" data-label="Created Date">
                    @item.Profession
                    </td>
                    <td scope="row" data-label="Created Date">@item.VendorName  </td>
                    <td scope="row" data-label="Created Date">@item.Email</td>
                    <td scope="row" data-label="Created Date">@item.FaxNumber</td>
                    <td scope="row" data-label="Created Date">@item.PhoneNumber</td>
                    <td scope="row" data-label="Created Date">@item.BusinessContact</td>
                    <td class=" d-flex" data-label="Document">

                        
                        
                        <a asp-action="PartnerAddEdit" asp-controller="Partner" asp-route-id="@item.VendorID" class="btn btn-outline-info btn-sm document-button mx-1">
                            Edit

                        </a>
                        <form class="deleteform" asp-action="DeletePartner" asp-controller="Partner">
                            <input type="hidden" name="venderId" value="@item.VendorID" />
                            <div  class="btn btn-outline-info btn-sm document-button mx-1 delete">
                                Delete

                            </div>
                        </form>
                    </td>
                </tr>
            }
           
        </tbody>
    </table>

    <div class="d-lg-none" style="max-width: 100%;">
        @{
            var Count = 0;
        }
        @foreach (var items in Model)
        {
            <div class="bg-info-subtle border-4 border-top data-mobile-row" data-bs-toggle="collapse" data-bs-target="#collapseExample-@Count" aria-expanded="false"
                 aria-controls="collapseExample">
                <div class="d-flex flex-column gap-3">
                    <div class="form-check my-4">
                        <span>@items.VendorName</span>
                    </div>
                </div>
            </div>
            <div class="collapse border-2 border-top rounded-3 bg-info-subtle " id="collapseExample-@Count">
                <div class="d-flex flex-column">
                    <div class="ms-3 mt-2">
                        <span class=""><i class="fas text-info fa-envelope fs-6 border border-1 border-info rounded-5 fs-6 p-2 me-2"></i>Email: @items.Email</span>
                    </div>
                    <div class="ms-3 mt-2">
                        <span class=""><i class="fas text-info fa-phone fs-6 border border-1 border-info rounded-5 fs-6 p-2 me-2"></i>Fax: @items.FaxNumber</span>
                    </div>
                    <div class="ms-3 mt-2">
                        <span class=""><i class="fas text-info fa-phone fs-6 border border-1 border-info rounded-5 fs-6 p-2 me-2"></i>Phone Number: @items.PhoneNumber</span>
                    </div>
                    <div class="ms-3 mt-2">
                        <span class=""><i class="fas text-info fa-envelope fs-6 border border-1 border-info rounded-5 fs-6 p-2 me-2"></i>Business Contact: @items.BusinessContact</span>
                    </div>

                    <div class="d-flex justify-content-end mb-2 gap-2 mx-2">
                        <a asp-action="PartnerAddEdit" asp-controller="Partner" asp-route-id="@items.VendorID" class="btn btn-outline-info btn-sm document-button mx-1">
                            Edit

                        </a>
                        <form class="deleteform" asp-action="DeletePartner" asp-controller="Partner">
                            <input type="hidden" name="venderId" value="@items.VendorID" />
                            <div class="btn btn-outline-info btn-sm document-button mx-1 delete">
                                Delete

                            </div>
                        </form>
                    </div>
                </div>
            </div>
            Count++;
        }
        @if (Model.Count < 1)
        {

            <h1 class="text-center mt-3 text-secondary" >No data Found</h1>

        }
    </div>
</div>
<script>
    new DataTable('#table', {
        pagingType: 'simple_numbers',
        lengthChange: false, // Disable table length dropdown
        searching: false // Disable search feature
    });
    var deleteButtons = document.querySelectorAll('.delete');

    deleteButtons.forEach(function (button) {
        button.addEventListener('click', function (event) {
            event.preventDefault();

            var form = button.closest('.deleteform');
            var vendorIdInput = form.querySelector('input[name="venderId"]');
            var vendorId = vendorIdInput.value;

            Swal.fire({
                title: "Do you want to delete this partner?",
                showDenyButton: false,
                showCancelButton: true,
                confirmButtonText: "Yes",
                denyButtonText: "No"
            }).then(function (result) {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });
</script>