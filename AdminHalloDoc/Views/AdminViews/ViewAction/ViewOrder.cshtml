@using AdminHalloDoc.Models.CV;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "View Orders";

}
@model AdminHalloDoc.Entities.ViewModel.AdminViewModel.ViewOrder;
<div class="container">
    <div class="justify-content-between d-flex container-fluid my-5 position-relative ">
        <div class="">
            <h1>  Send Order </h1>
        </div>
        <div>
            <a onclick="history.back()" class="btn btn-outline-info"> ❮  Back </a>
        </div>
    </div>
    <div class="card border-0 shadow p-4 mb-5  rounded">
        <form asp-action="SaveViewOrder" asp-controller="SubmitForm" class="row g-3 " enctype="multipart/form-data">
            <input asp-for="RequestId" type="hidden">
            <input asp-for="UserId" value="@CV.ID()" type="hidden">

            <div class="col-md-6 form-floating  ">
                <select class="form-select  mt-3 p-2 " required asp-for="VenderTypeId" asp-items="@(new SelectList(ViewBag.VenderTypeComboBox,"VenderTypeId","Name"))" data-allow-clear="true" tabindex="-1" onchange="myFunction()" id="VenderType" data-control="select2" data-placeholder="Select Level">
                        <option value="">Select VenderType</option>
                    </select>
                <span asp-validation-for="VenderTypeId" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-floating  ">
                <select class="form-select  mt-3 p-2" required asp-for="VenderId" data-allow-clear="true" tabindex="-1" onchange="mySecondFunction()" id="vender" data-control="select2" data-placeholder="Select Level">
                    <option value="">Select Vender</option>
                </select>
            </div>
            <div class="col-md-6 form-floating">
                <input asp-for="BusinessContact" required class="form-control rounded" id="BusinessContact" type="text" placeholder=Suchtext autocomplete=off>
                <label for="floatingInput">Business Contact </label>
                <span asp-validation-for="BusinessContact" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating">
                <input asp-for="Email" required class="form-control rounded" type="text" id="Email" placeholder=Suchtext autocomplete=off>
                <label for="floatingInput">Email </label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-floating ">
                <input asp-for="FaxNumber" required type="text" class="form-control rounded" id="FaxNumber" autocomplete=off>
                <label for="floatingInput">Fax Number </label>

                <span asp-validation-for="FaxNumber" class="text-danger"></span>
            </div>

            <div class="col-md-12 form-floating ">
                <textarea class="form-control rounded" required asp-for="Prescription" cols="500" type="text" rows="50" placeholder=Symptoms autocomplete=off></textarea>
                <label for="floatingInput">
                    Prescription or
                    Order Details
                </label>
                <span asp-validation-for="Prescription" class="text-danger"></span>
            </div>


            <div class="col-md-6 form-floating  ">
                <select class="form-select mt-3 p-2" required asp-for="Refills" data-allow-clear="true" tabindex="-1"  data-control="select2" data-placeholder="Number Of Refile">
                    <option  >1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
            </div>
            <div class="text-end my-4">
            <input type="submit" value="save" class="btn btn-success" />
            <a onclick="history.back()" class="btn btn-danger"> Cancel </a>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">

    function myFunction() {
        var email = $("#VenderType").val();
        console.log(email);
        $.ajax({
            type: "POST",
            url: '@Url.Action("FindVender","SubmitForm")?VenderType=' + email,
            cache: false,
            success: function (response) {

                console.log(response);
                var s = '';
                for (var i = 0; i < response.length; i++) {
                    s += '<option class="p-2" value="' + response[i].venderId + '">' + response[i].venderName + '</option>';
                }
                $("#vender").html(s);
            },
            error: function () {
                alert("Error while checking email.");
            }
        });
    }

    function mySecondFunction() {
        var email = $("#vender").val();
        console.log(email);
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetOrder","SubmitForm")?Venderid=' + email,
            cache: false,
            success: function (response) {
                $("#BusinessContact").val(response.businessContact);
                $("#Email").val(response.email);
                $("#FaxNumber").val(response.faxNumber);

            },
            error: function () {
                alert("Error while checking email.");
            }
        });
    }

</script>