        }
        if (getLastState() != null) {
            $('#'+getLastState()+'').click();
        } else {
            $('#new').click();
            $('#new').addClass('active');
            $('#p-side').val("new");
        }
       
    };

    const boxes = document.querySelectorAll('.local');

    boxes.forEach(box => {
        box.addEventListener('click', function handleClick(event) {
            setLastState(this.id);
            $('#p-side').html('('+this.id+')');
        });
    });

    function setLastState(state) {
        localStorage.setItem('lastState', state);
    }

    function getLastState() {
        return localStorage.getItem('lastState');
    }
</script>
