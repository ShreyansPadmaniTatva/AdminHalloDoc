@using AdminHalloDoc.Models.CV;
<style>
    .d-none {
        display: none !important;
    }

    .d-block {
        display: inline-block !important;
    }
</style>
<nav class="navbar px-3  border-2 border-bottom navbar-expand-lg bg-white">
    <div class="container-fluid">
        <button class="nav-toggle border border-info toggle--close d-none" aria-label="close menu" onclick="toggleButtons(this)">
            <span class="navbar-toggler-icon"></span>
        </button>
        <button class="nav-toggle toggle--open text-end " type="button" onclick="toggleButtons(this)">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <a class="navbar-brand " href="Patient_index.html">
            <img src="~/images/Fig56. Patient site 1.png" class="img-fluid logo" />
        </a>

        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        </ul>
        <div class=" top-0 end-0 my-4 mx-5 position-absolute text-info border-info rounded-3 d-flex">
            <h5 class="text-dark align-bottom myname pt-2 ">
                Welcome <span class="fw-bolder"> @CV.UserName() </span>
            </h5>
            <a asp-action="Logout" asp-controller="AdminLogin" class="btn btn-outline-info mx-2">Logout</a>
           
            <button class=" btn-outline-info btn btn-sm " onclick="mode()">
                <span id="thm"> <i class="fa-solid fa-sun p-2"></i></span>
                <span id="thm2"> <i class="fa-solid fa-moon p-2"></i></span>
            </button>
        </div>
    </div>
</nav>

<script>
    let closeButton = document.querySelector('.toggle--close');
    let openButton = document.querySelector('.toggle--open');
    function toggleButtons(clickedButton) {
        
        if (clickedButton.classList.contains('toggle--close')) {
            closeButton.classList.add('d-none');
            closeButton.classList.remove('d-block');
            openButton.classList.remove('d-none');
            openButton.classList.add('d-block');
        } else {
            openButton.classList.remove('d-block');
            closeButton.classList.remove('d-none');
            closeButton.classList.add('d-block');
            openButton.classList.add('d-none');
        }
    }
</script>